<Window x:Class="volpt.MainWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:volpt" xmlns:view="clr-namespace:volpt.MVVM.View" 
        xmlns:controls="clr-namespace:volpt.Core" mc:Ignorable="d" Title="ВПТ: Образование" 
        Height="768" Width="1024" MinHeight="768" MinWidth="1024"
        Background="Transparent">
    <Border Background="{StaticResource Light2Brush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="58"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#FF567DB8">
                <Grid Height="58" VerticalAlignment="Center" Margin="24,8">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Images/впт_логотипsmall.png" Width="72" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="ВПТ: Образование" Style="{StaticResource H1}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button x:Name="schedule" 
                                     Style="{StaticResource MainButtonStyle}"
                                     Content="Расписание" 
                                     FontSize="16" VerticalAlignment="Center" 
                                     Margin="8,4"/>
                        <Button x:Name="groups" 
                                Style="{StaticResource MainButtonStyle}"
                                Content="Список групп" 
                                FontSize="16" 
                                VerticalAlignment="Center" Margin="0,4,16,4"/>
                        <Button x:Name="exit" Width="23" Height="19" BorderBrush="{x:Null}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="4">
                                        <Image Source="/Images/logout.png" Stretch="Uniform"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="32,2">
                <TextBlock Text="Расписание" Style="{StaticResource H2}" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button BorderBrush="{x:Null}"  Background="{x:Null}" >
                        <Button.Template>
                            <ControlTemplate  TargetType="Button">
                                <Border x:Name="Border" CornerRadius="8" Padding="4">
                                    <Image Width="12" Height="19" Source="/Images/chevron.left.png"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <TextBlock Text="00.00-00.00" Style="{StaticResource H4}" Margin="4"/>
                    <Button BorderBrush="{x:Null}" Background="{x:Null}"  >
                        <Button.Template>
                            <ControlTemplate  TargetType="Button">
                                <Border x:Name="Border" CornerRadius="8" Padding="4">
                                    <Image Width="12" Height="19" Source="/Images/chevron.left.png" RenderTransformOrigin="0.5,0.5">
                                        <Image.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="-1"/>
                                                <SkewTransform/>
                                                <RotateTransform/>
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Image.RenderTransform>
                                    </Image>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        
                    </Button>
                </StackPanel>
            </Grid>
            <ItemsControl ItemsSource="{Binding Schedule}" Grid.Row="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:AdaptiveUniformGrid 
                            Columns="3"
                            Rows="3"
                            RowSpacing="16"
                            ColumnSpacing="16" Margin="32,8,32,8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <view:ScheduledCardView Day="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>