<Window x:Class="volpt.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:volpt" xmlns:view="clr-namespace:volpt.MVVM.View" xmlns:controls="clr-namespace:volpt.Core" mc:Ignorable="d" Title="MainWindow" Height="768" Width="1024" Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Подключаем наш словарь со стилями -->
                <ResourceDictionary Source="/Theme/MainButtontTheme.xaml"/>
                <ResourceDictionary Source="/Theme/Color.xaml"/>
                <ResourceDictionary Source="/Theme/TextStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border Background="#FFE7E7EB">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="58"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#FF567DB8">
                <Grid Height="58" VerticalAlignment="Center" Margin="24,8">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Images/впт_логотипsmall.png" Width="72" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="ВПТ: Образование" Style="{StaticResource H1}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button x:Name="schedule" 
                                     Style="{StaticResource MainButtonStyle}"
                                     Content="Расписание" 
                                     FontSize="16" VerticalAlignment="Center" 
                                     Margin="8,4"/>
                        <Button x:Name="groups" 
                                Style="{StaticResource MainButtonStyle}"
                                Content="Список групп" 
                                FontSize="16" 
                                VerticalAlignment="Center" Margin="0,4,16,4"/>
                        <Button x:Name="exit" Width="23" Height="19" BorderBrush="{x:Null}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="4">
                                        <Image Source="/Images/logout.png" Stretch="Uniform"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource ActiveBtnBrush}"/>
                                            <Setter Property="Cursor" Value="Hand"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="32,2">
                <TextBlock Text="Расписание" Style="{StaticResource H2}" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button BorderBrush="{x:Null}" Background="{x:Null}">
                        <Image Width="12" Height="19" Source="/Images/chevron.left.png"/>
                    </Button>
                    <TextBlock Text="00.00-00.00" Style="{StaticResource H4}" />
                    <Button BorderBrush="{x:Null}" Background="{x:Null}">
                        <Image Width="12" Height="19" Source="/Images/chevron.left.png" RenderTransformOrigin="0.5,0.5">
                            <Image.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform ScaleX="-1"/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Image.RenderTransform>
                        </Image>
                    </Button>
                </StackPanel>
            </Grid>
            <ItemsControl ItemsSource="{Binding Days}" Grid.Row="2">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <controls:AdaptiveUniformGrid 
                            Columns="3"
                            RowSpacing="16"
                            ColumnSpacing="16"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <view:ScheduledCardView Day="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</Window>