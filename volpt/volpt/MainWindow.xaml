<Window x:Class="volpt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:volpt"
        xmlns:view="clr-namespace:volpt.MVVM.View"
        xmlns:controls="clr-namespace:volpt.Core"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024" Background="Transparent">
    <Border Background="#FFE7E7EB">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="58"/>
                <RowDefinition Height="34"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#FF567DB8">
                <Grid Height="58" VerticalAlignment="Center"  Margin="24,8">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Images/впт_логотипsmall.png" Width="72" Height="32" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="ВПТ: Образование"
                                       VerticalAlignment="Center"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <Button x:Name="schedule" Content="Расписание" 
                                FontSize="16" VerticalAlignment="Center" 
                                Margin="8,4"/>
                        <Button x:Name="groups" Content="Список групп" FontSize="16" VerticalAlignment="Center" Margin="0,4,16,4"/>
                        <Button Width="23" Height="19" BorderBrush="{x:Null}">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/logout.png" Stretch="Uniform"/>
                            </Button.Background>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="32,2">
                <TextBlock Text="Расписание"
                        FontSize="22"
                        FontWeight="Bold"
                        Foreground="#567DB8" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="&lt;" Width="30" BorderBrush="{x:Null}" 
                            Background="{x:Null}" 
                            FontSize="20" Foreground="#FF6094E1"/>
                    <TextBlock Text="00.00.25-00.00.25" Margin="10,0" 
                               VerticalAlignment="Bottom"    
                               FontSize="20" Foreground="#FF6094E1"/>
                    <Button Content="&gt;" Width="30" Background="{x:Null}" 
                            BorderBrush="{x:Null}"
                            FontSize="20" Foreground="#FF6094E1"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Margin="32,0,32,16">

                <!-- 3 столбца -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- 2 строки -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 1 строка -->
                <view:ScheduledCardView Grid.Row="0" Grid.Column="0" Margin="0,0,12,8"/>
                <view:ScheduledCardView Grid.Row="0" Grid.Column="1" Margin="12,0,12,8"/>
                <view:ScheduledCardView Grid.Row="0" Grid.Column="2" Margin="12,0,0,8"/>
                <view:ScheduledCardView Grid.Row="1" Grid.Column="0" Margin="0,0,12,0"/>
                <view:ScheduledCardView Grid.Row="1" Grid.Column="1" Margin="12,0,12,0"/>
                <view:ScheduledCardView Grid.Row="1" Grid.Column="2" Margin="12,0,0,0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
