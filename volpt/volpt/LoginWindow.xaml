<Window x:Class="volpt.MVVM.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:volpt.MVVM.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="768" Width="1024">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/MVVM/View/blurry-gradient-haikei (2).png"/>
        </Grid.Background>

        <StackPanel Orientation="Horizontal" Margin="0,32"
                    HorizontalAlignment="Center" VerticalAlignment="Top">
            <Image Source="/MVVM/View/впт_логотип 1.png"
                Height="46" Width="104"/>
            <TextBlock Text="ВПТ:Образование" Style="{StaticResource H1}"/>
        </StackPanel>
        <Border Background="{StaticResource BackgroundLightBrush}"
                Width="391" Height="423"
                CornerRadius="18" Padding="8"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Text="Вход в систему" 
                           Style="{StaticResource H2}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Grid.Row="0" Margin="0,0,0,8"/>

                <!-- Поля ввода -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="8">
                    <TextBlock Text="Логин" Style="{StaticResource H6}" Margin="0,0,0,8"/>
                    <TextBox x:Name="LoginTextBox" 
                             Height="32"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="Пароль" Style="{StaticResource H6}" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Height="32"
                                 Margin="0"/>
                </StackPanel>

                <!-- Кнопка -->
                <Button x:Name="LoginButton" 
                        Content="Войти" 
                        Click="Click_LoginButton"
                        Grid.Row="2"
                        Style="{StaticResource LoginBtnStyle}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
