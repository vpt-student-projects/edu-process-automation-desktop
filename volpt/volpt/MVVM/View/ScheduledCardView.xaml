<UserControl x:Class="volpt.MVVM.View.ScheduledCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:volpt.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="298.67"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <Border CornerRadius="16" Background="#FFF9FAFB">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="26" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="#FF567DB8" CornerRadius="10,10,0,0">
                <Grid x:Name="header" Grid.Row="0">
                    <TextBlock x:Name="day" Style="{StaticResource H4}"
                               Foreground="{StaticResource TextBrush}" FontSize="18" 
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Padding="10,2.5" />
                    <TextBlock x:Name="date"  Style="{StaticResource H5}"
                               Foreground="{StaticResource TextBrush}" FontSize="18" 
                               HorizontalAlignment="Right" VerticalAlignment="Center"
                               Padding="10,2.5"/>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="8">
                <!-- Если есть занятия -->
                <ItemsControl x:Name="lessonsList" 
                             ItemsSource="{Binding Lessons}"
                             Visibility="{Binding Lessons.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <local:LessonsView />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Если нет занятий -->
                <TextBlock Text="Нет занятий" 
                          Style="{StaticResource H5}"
                          Foreground="{StaticResource SecondaryBrush}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Visibility="{Binding Lessons.Count, Converter={StaticResource InverseCountToVisibilityConverter}}"/>
            </Grid>

        </Grid>
    </Border>
</UserControl>
