<Page x:Class="volpt.MVVM.View.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:view="clr-namespace:volpt.MVVM.View"
      xmlns:controls="clr-namespace:volpt.Core"
      mc:Ignorable="d"
      SnapsToDevicePixels="True"
      UseLayoutRounding="True"
      Background="Transparent" 
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

    <Grid Margin="32,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ВЕРХНИЙ БАР ДАТЫ -->
        <Grid Grid.Row="0" Margin="0,2">
            <TextBlock Text="Расписание" 
                       Style="{StaticResource H2}" 
                       HorizontalAlignment="Left" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

                <!-- Кнопка "Текущая неделя" -->
                <Button BorderBrush="{x:Null}" Background="{x:Null}" 
                        Command="{Binding CurrentWeekCommand}"
                        ToolTip="Текущая неделя" 
                       Visibility="{Binding IsCurrentWeek, Converter={StaticResource InverseCountToVisibilityConverter}}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" CornerRadius="8" Padding="8,0">
                                <TextBlock Text="Сегодня" Style="{StaticResource H5}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- кнопка назад -->
                <Button BorderBrush="{x:Null}" Background="{x:Null}" 
                        Command="{Binding PreviousWeekCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" CornerRadius="8" Padding="4">
                                <Image Width="12" Height="19" Source="/Images/chevron.left.png"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- дата -->
                <TextBlock Text="{Binding WeekDisplay}" Style="{StaticResource H4}" Margin="4"/>

                <!-- кнопка вперед -->
                <Button BorderBrush="{x:Null}" Background="{x:Null}" 
                        Command="{Binding NextWeekCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" CornerRadius="8" Padding="4">
                                <Image Width="12" Height="19" Source="/Images/chevron.left.png" RenderTransformOrigin="0.5,0.5">
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="-1"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                </Image>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource SecondaryBrush}"/>
                                    <Setter Property="Cursor" Value="Hand"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- РАСПИСАНИЕ -->
        <ItemsControl Grid.Row="1"
                      ItemsSource="{Binding Schedule}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:AdaptiveUniformGrid 
                        Columns="3"
                        Rows="3"
                        RowSpacing="16"
                        ColumnSpacing="16"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <view:ScheduledCardView Day="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
