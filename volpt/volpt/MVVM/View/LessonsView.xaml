<UserControl x:Class="volpt.MVVM.View.LessonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:volpt.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="282.67" >
    <Button Background="Transparent"
            BorderThickness="0"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Cursor="Hand">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border x:Name="Border" Background="Transparent"
                    BorderBrush="#6094E1"
                    BorderThickness="1"
                    CornerRadius="8" Padding="6">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="0" Grid.Row="0" >
                            <Border Background="{StaticResource BackgroundLightBrush}" 
                                    Height="14" Width="14"
                                    CornerRadius="4"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Lesson.Number, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                           Style="{StaticResource H6}" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding Lesson.Subject, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       Style="{StaticResource H6}" />
                        </StackPanel>

                        <TextBlock Text="{Binding Lesson.Time, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Style="{StaticResource H6}" 
                                   HorizontalAlignment="Right"
                                   Grid.Column="1" Grid.Row="0"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                    VerticalAlignment="Center"
                                    Grid.Column="1" Grid.Row="1">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,4,0" HorizontalAlignment="Right">
                                <Image Source="/volpt;component/Images/person.png" Margin="1,0" VerticalAlignment="Center" Width="16"/>
                                <TextBlock Text="{Binding Lesson.Group, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                           Style="{StaticResource H6}"
                                           Foreground="#9CB8E2"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                                <Image Source="/volpt;component/Images/numbersign.png" Margin="1,0" VerticalAlignment="Center" Width="13"/>
                                <TextBlock  Text="{Binding Lesson.Room, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            Style="{StaticResource H6}"
                             Foreground="#9CB8E2"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="Border" Property="Background" Value="{StaticResource ActiveBtnBrush}"/>
                        <Setter TargetName="Border" Property="CornerRadius" Value="8"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
