<UserControl x:Class="volpt.MVVM.View.LessonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:volpt.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="282.67" >
    <Button Background="Transparent"
            BorderThickness="0"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Cursor="Hand">
        <Border Background="Transparent"
                BorderBrush="#6094E1"
                BorderThickness="1"
                CornerRadius="8" Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Column="0" Grid.Row="0">
                    <Border Background="#F9FAFB" 
                            Height="14" Width="14"
                            CornerRadius="4"
                            VerticalAlignment="Center">
                        <TextBlock Text="1" Foreground="#567DB8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="МДК 02.02" Foreground="#567DB8" VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="08:00–10:00" 
                           Foreground="#567DB8"  HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Grid.Column="01" Grid.Row="0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                             VerticalAlignment="Center"
                            Grid.Column="1" Grid.Row="1">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,4,0" HorizontalAlignment="Right">
                        <Image Source="/Images/person.png" Margin="1,0" VerticalAlignment="Center" Width="16"/>
                        <TextBlock Text="ИСП-8"  Foreground="#9CB8E2" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                        <Image Source="/Images/numbersign.png" Margin="1,0" VerticalAlignment="Center" Width="13"/>
                        <TextBlock Text="105 ауд." Foreground="#9CB8E2" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Button>
</UserControl>
