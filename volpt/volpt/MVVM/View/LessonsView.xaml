<UserControl x:Class="volpt.MVVM.View.LessonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:volpt.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="282.67" 
             
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">
    <Button Click="Lesson_Click">
        <Button.Template>
            <ControlTemplate TargetType="Button">
                <Border x:Name="Border" Background="Transparent"
                    BorderBrush="{StaticResource AccentLightBrush}"
                    BorderThickness="1"
                    CornerRadius="8" Padding="6" Margin="0,0,0,8"
                    DataContext="{Binding Lesson, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Column="0" Grid.Row="0">
                            <Border Background="{StaticResource BackgroundLightBrush}" 
                                    Height="14" Width="14"
                                    CornerRadius="4"
                                    Margin="0,0,4,0"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="1" 
                                                      Opacity="0.8" 
                                                      BlurRadius="2" 
                                                      Color="{StaticResource AccentLight}"
                                                      Direction="650"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding Number}"
                                           Style="{StaticResource H6}" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding Subject}"
                                       Style="{StaticResource H5}" />
                        </StackPanel>

                        <TextBlock  Text="{Binding Time}"
                                   Style="{StaticResource H5}" 
                                   HorizontalAlignment="Right"
                                   Grid.Column="1" Grid.Row="0"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                    VerticalAlignment="Center"
                                    Grid.Column="1" Grid.Row="1">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,4,0" HorizontalAlignment="Right">
                                <Image Source="/volpt;component/Images/person.png" Margin="1,0" VerticalAlignment="Center" Width="16"/>
                                <TextBlock Text="{Binding Group}"
                                           Style="{StaticResource H6}"
                                           Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                                <Image Source="/volpt;component/Images/numbersign.png" Margin="1,0" VerticalAlignment="Center" Width="13"/>
                                <TextBlock Text="{Binding Room}"
                                            Style="{StaticResource H6}"
                             Foreground="{StaticResource SecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverLessonsBrush}"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Button.Template>
    </Button>
</UserControl>
