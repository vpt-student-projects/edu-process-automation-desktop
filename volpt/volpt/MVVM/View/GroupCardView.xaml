<UserControl x:Class="volpt.MVVM.View.GroupCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:volpt.MVVM.View"
             xmlns:core="clr-namespace:volpt.Core" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок группы -->
            <Border Background="{StaticResource BackgroundLightBrush}"
                    BorderBrush="{StaticResource AccentLightBrush}"
                    BorderThickness="1"
                    Margin="0,4"
                    CornerRadius="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Кнопка стрелки -->
                    <Button Grid.Column="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="30"
                            Style="{StaticResource MainButtonStyle}"
                            Click="ExpandButton_Click"
                            ToolTip="Развернуть/Свернуть"
                            Padding="0"
                            Margin="4">
                        <Viewbox Width="16" Height="16">
                            <Path Data="M 0,0 L 8,8 L 16,0"
                                  Stroke="{StaticResource PrimaryColorBrush}"
                                  StrokeThickness="2"
                                  StrokeLineJoin="Round"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round">
                                <Path.RenderTransform>
                                    <RotateTransform CenterX="8" CenterY="4" 
                                                     Angle="{Binding IsExpanded, Converter={StaticResource BoolToAngleConverter}}"/>
                                </Path.RenderTransform>
                            </Path>
                        </Viewbox>
                    </Button>

                    <!-- Название группы -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding Name}" 
                               Style="{StaticResource H4}"
                               Foreground="{StaticResource PrimaryColorBrush}"
                               VerticalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>

                    <!-- Статистика -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal" 
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding StudentCount, StringFormat='👥 {0}'}"
                                   Style="{StaticResource H6}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   Margin="8,0"
                                   ToolTip="Количество студентов"/>
                        <TextBlock Text="{Binding LessonCount, StringFormat='📚 {0}'}"
                                   Style="{StaticResource H6}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   Margin="8,0"
                                   ToolTip="Количество занятий"/>
                        <TextBlock Text="{Binding Subjects.Count, StringFormat='📖 {0}'}"
                                   Style="{StaticResource H6}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   Margin="8,0"
                                   ToolTip="Количество предметов"/>
                    </StackPanel>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Column="3"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0">
                        <Button Content="📅"
                                Style="{StaticResource MainButtonStyle}"
                                Click="ScheduleButton_Click"
                                ToolTip="Расписание группы"
                                Padding="8,4"
                                Margin="4,0"/>
                        <Button Content="👨‍🎓"
                                Style="{StaticResource MainButtonStyle}"
                                Click="StudentsButton_Click"
                                ToolTip="Список студентов"
                                Padding="8,4"
                                Margin="4,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Список предметов (виден только при IsExpanded = true) -->
            <Border Grid.Row="1"
                    Background="{StaticResource BackgroundLightBrush}"
                    CornerRadius="16"
                    Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibilityConverter}}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок предметов -->
                    <Border Padding="16,8">
                        <TextBlock Text="Предметы, которые вы ведете в этой группе"
                                   Padding="0,2"
                                   Style="{StaticResource H5}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Список предметов -->
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Subjects}"
                                  Margin="8,0,8,8">

                        <!-- Если нет предметов, показываем сообщение -->
                        <ItemsControl.Style>
                            <Style TargetType="ItemsControl">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ItemsControl">
                                            <Border>
                                                <Grid>
                                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                                  HorizontalScrollBarVisibility="Disabled">
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>

                                                    <!-- Сообщение при отсутствии предметов -->
                                                    <TextBlock Text="Нет предметов для этой группы"
                                                               Style="{StaticResource H6}"
                                                               Foreground="{StaticResource SecondaryBrush}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               Visibility="{Binding Items.Count, 
                                                                       RelativeSource={RelativeSource TemplatedParent}, 
                                                                       Converter={StaticResource InverseCountToVisibilityConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ItemsControl.Style>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Click="SubjectButton_Click"
                                        Padding="0"
                                        Background="Transparent"
                                        BorderThickness="0">
                                    <Border Margin="4" 
                                            Padding="8"
                                            CornerRadius="8"
                                            Background="{StaticResource BackgroundLightBrush}"
                                            BorderBrush="{StaticResource AccentLightBrush}"
                                            BorderThickness="1"
                                            ToolTip="{Binding Title}">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" 
                                                              Opacity="0.1" 
                                                              BlurRadius="4"/>
                                        </Border.Effect>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Код МДК -->

                                            <StackPanel Grid.Row="0"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Bottom">
                                                <!--Иконка мдк-->
                                                <TextBlock Grid.Column="0"
                                                            Text="🎓"
                                                            FontSize="15"
                                                            Foreground="{StaticResource PrimaryColorBrush}"
                                                            HorizontalAlignment="Right"
                                                            VerticalAlignment="Top"
                                                            Visibility="{Binding IsMdk, Converter={StaticResource BoolToVisibilityConverter}}"
                                                            ToolTip="МДК"/>
                                                <!--Код-->
                                                <TextBlock Text="{Binding Code}" 
                                                            Style="{StaticResource H6}"
                                                            Foreground="{StaticResource PrimaryColorBrush}"
                                                            TextWrapping="Wrap"
                                                            FontWeight="SemiBold"
                                                            Visibility="{Binding Code, Converter={StaticResource CountToVisibilityConverter}}"/>
                                                <!--Название-->
                                                <TextBlock Text="{Binding Title}" 
                                                            Style="{StaticResource H5}"
                                                            TextWrapping="Wrap"
                                                            VerticalAlignment="Center"
                                                            Margin="0,4,0,4"
                                                            FontSize="13"/>
                                            </StackPanel>


                                            <!-- Часы -->
                                            <StackPanel Grid.Row="2"
                                                        Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom">
                                                <TextBlock Text="{Binding TotalHours}" 
                                                           Style="{StaticResource H6}"
                                                           Foreground="{StaticResource PrimaryColorBrush}"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text=" ч" 
                                                           Style="{StaticResource H6}"
                                                           Foreground="{StaticResource PrimaryColorBrush}"
                                                           Margin="2,0,0,0"/>
                                            </StackPanel>

                                       
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>