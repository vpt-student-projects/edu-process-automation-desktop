<UserControl x:Class="volpt.MVVM.View.GroupCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             SnapsToDevicePixels="True"
             UseLayoutRounding="True">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок группы -->
            <Border Background="{StaticResource BackgroundLightBrush}"
                    Margin="0,4"
                    BorderBrush="{StaticResource AccentLightBrush}"
                    BorderThickness="1"
                    CornerRadius="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Кнопка стрелки -->
                    <Button Grid.Column="0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Width="48"
                            Click="ExpandButton_Click"
                            ToolTip="Развернуть/Свернуть">
                        <TextBlock FontSize="20"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="▶"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                            <Setter Property="Text" Value="▼"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>

                    <!-- Название группы -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding Name}" 
                               Style="{StaticResource H4}"
                               Foreground="{StaticResource PrimaryColorBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <!-- Статистика -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="0,0,16,0">
                        <TextBlock Text="{Binding StudentCount, StringFormat='👥 {0}'}"
                                   Style="{StaticResource H6}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   Margin="8,0"/>
                        <TextBlock Text="{Binding LessonCount, StringFormat='📚 {0}'}"
                                   Style="{StaticResource H6}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   Margin="8,0"/>
                    </StackPanel>

                    <!-- Кнопки действий -->
                    <StackPanel Grid.Column="3"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0">
                        <Button Content="📅"
                                Style="{StaticResource MainButtonStyle}"
                                Click="ScheduleButton_Click"
                                ToolTip="Расписание"/>
                        <Button Content="👨‍🎓"
                                Style="{StaticResource MainButtonStyle}"
                                Click="StudentsButton_Click"
                                ToolTip="Студенты"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Список предметов -->
            <Border Grid.Row="1"
                    Background="{StaticResource BackgroundLightBrush}"
                    CornerRadius="16"
                    Margin="0,0,0,4">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsExpanded}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <Border Padding="16,8">
                        <TextBlock Text="Предметы группы"
                                   Style="{StaticResource H5}"
                                   Foreground="{StaticResource PrimaryColorBrush}"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Список предметов -->
                    <ItemsControl Grid.Row="1"
                                  ItemsSource="{Binding Subjects}"
                                  Margin="8">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="4" 
                                        Padding="12,8"
                                        CornerRadius="8"
                                        Background="{StaticResource BackgroundLightBrush}"
                                        Width="180"
                                        Height="80">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Код -->
                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding Code}" 
                                                   Style="{StaticResource H6}"
                                                   Foreground="{StaticResource PrimaryColorBrush}"
                                                   TextWrapping="Wrap"/>

                                        <!-- Название -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Title}" 
                                                   Style="{StaticResource H5}"
                                                   TextWrapping="Wrap"
                                                   VerticalAlignment="Center"
                                                   Margin="0,4,0,4"/>

                                        <!-- Часы -->
                                        <StackPanel Grid.Row="2"
                                                    Orientation="Horizontal"
                                                    HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding TotalHours}" 
                                                       Style="{StaticResource H6}"
                                                       Foreground="{StaticResource SecondaryBrush}"/>
                                            <TextBlock Text=" ч" 
                                                       Style="{StaticResource H6}"
                                                       Foreground="{StaticResource SecondaryBrush}"
                                                       Margin="2,0,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>